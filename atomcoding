const blankLine = ' |  | ';
const guessLine = ' 1|  | ';
const bombLine = ' | b | ';

console.log('This is what an empty board look like:');
console.log(blankLine);
console.log(blankLine);
console.log(blankLine);
console.log('This is what a board with a guess and a bomb on it would like:')
console.log(guessLine);
console.log(bombLine);
console.log(blankLine);
